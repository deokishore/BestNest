<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>

    <!--  Master Start -->
    <definition name="master.page" template="/public/template/master.jsp">
        <put-attribute name="header" value="/public/template/header.jsp"/>
        <put-attribute name="footer" value="/public/template/footer.jsp"/>
    </definition>
    <!--  Master End -->

    <!--  Home Page -->
    <definition name="homePage" extends="master.page">
        <put-attribute name="body" value="/protected/home-page.jsp"/>
    </definition>

    <!--  Project Search Result Page projectGridSort -->
    <definition name="projectGridSort" extends="master.page">
        <put-attribute name="body" value="/protected/project-grid-sort.jsp"/>
    </definition>

    <!--  Project Search Result Page projectListingSort -->
    <definition name="projectListingSort" extends="master.page">
        <put-attribute name="body" value="/protected/project-listing-sort.jsp"/>
    </definition>

    <!--  ProjectDetails Page -->
    <definition name="projectDetail" extends="master.page">
        <put-attribute name="body" value="/protected/project-detail.jsp"/>
    </definition>

    <!-- Blogger Section Start -->
    <definition name="common" template="/public/template/master.jsp">
        <put-attribute name="title" value="" />
        <put-attribute name="header" value="/public/template/header.jsp" />
        <put-attribute name="body" value="" />
        <put-attribute name="footer" value="/WEB-INF/views/tiles/footer.jsp" />
    </definition>

    <definition name="bloggerHome" extends="common">
        <put-attribute name="title" value="Blogger" />
        <put-attribute name="body" value="/WEB-INF/views/tiles/body_home.jsp" />
    </definition>

    <definition name="commonPosts" extends="common">
        <put-attribute name="title" value="Blogger - Posts" />
        <put-attribute name="body" value="/WEB-INF/views/tiles/body_posts.jsp" />
    </definition>
    <!-- Blogger Section End -->

</tiles-definitions>